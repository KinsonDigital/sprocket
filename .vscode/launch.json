{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{ // PLAYGROUND
			"request": "launch",
			"name": "Playground",
			"type": "node",
			"program": "${workspaceFolder}/playground.ts",
			"cwd": "${workspaceFolder}",
			"env": {
				"WORKING_DIR": "${workspaceFolder}",
				"GITHUB_TOKEN": "${env:CICD_TOKEN}",
				"OWNER_NAME": "KinsonDigital",
				"REPO_NAME": "sprocket"
			},
			"windows": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"--inspect-wait",
				"--allow-all",
			],
			"attachSimplePort": 9229,
			"console": "integratedTerminal"
		},
		{ // DEBUG
			"name": "Debug",
			"request": "launch",
			"type": "node",
			"program": "${workspaceFolder}/src/main.ts",
			"cwd": "${workspaceFolder}",
			"windows": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"-A",
				"--inspect-wait",
			],
			"args": [
				"run-job",
				"testing/test-config.ts",
				"--job-name",
				"Prep-Prod-Release"
			],
			"attachSimplePort": 9229,
			"console": "integratedTerminal"
		},
		{ // Run Job (DEBUG)
			"name": "Run Job (Debug)",
			"request": "launch",
			"type": "node",
			"program": "${workspaceFolder}/src/main.ts",
			"cwd": "${workspaceFolder}",
			"env": {
				"OWNER_NAME": "KinsonDigital",
				"REPO_NAME": "sprocket",
				"GITHUB_TOKEN": "${env:CICD_TOKEN}"
			},
			"windows": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"-E",
				"-R",
				"-W",
				"-N",
				"--allow-run",
				"--inspect-wait",
			],
			"args": [
				"run-job",
				"testing/test-config.ts",
			],
			"attachSimplePort": 9229,
			"console": "integratedTerminal"
		},
		{ // DEBUG UNIT TEST FILE
			"name": "Debug Unit Test File",
			"request": "launch",
			"type": "node",
			"cwd": "${workspaceFolder}/tests",
			"runtimeArgs": [
				"test",
				"--inspect-brk",
				"--allow-all",
				"${fileBasename}",
			],
			"attachSimplePort": 9229,
			"runtimeExecutable": "npm",
			"skipFiles": [
				"<node_internals>/**"
			],
			"windows": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
		},
		{ // CHECK RELEASE NOTES CICD SCRIPT
			"request": "launch",
			"name": "Check Release Notes CICD Script",
			"type": "node",
			"program": "${workspaceFolder}/.github/cicd/scripts/check-release-notes.ts",
			"cwd": "${workspaceFolder}",
			"env": {
				"RELEASE_TYPE": "Preview",
				"VERSION": "v1.0.0-preview.1"
			},
			"windows": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"-E",
				"-R",
				"--inspect-wait",
			],
			"attachSimplePort": 9229,
		},
		{ // INSTALL SCRIPT
			"request": "launch",
			"name": "Install Script",
			"type": "node",
			"program": "${workspaceFolder}/installation/install.ts",
			"cwd": "${workspaceFolder}",
			"windows": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"-N",
				"-R",
				"-W",
				"--inspect-wait",
			],
			"args": [
				"latest",
			],
			"attachSimplePort": 9229,
			"console": "integratedTerminal"
		},
		{ // RELEASE NOTES GENERATOR TESTING
			"name": "Release Notes Generator Testing",
			"request": "launch"	,
			"type": "node",
			"program": "${workspaceFolder}/testing/release-notes-generator-testing.ts",
			"cwd": "${workspaceFolder}",
			"windows": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"-A",
				"--inspect-wait",
			],
			"args": [
				"latest",
			],
			"attachSimplePort": 9229,
			"console": "integratedTerminal"
		},
	]
}
