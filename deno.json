{
    "name": "@kinsondigital/sprocket",
    "version": "2.1.0",
    "license": "MIT",
    "tasks": {
        "check": "deno check **/*.ts",
        "fmt": "deno fmt **/*.ts",
        "fmt-check": "deno fmt --check **/*.ts",
        "lint": "deno lint **/*.ts",
        "tests": "deno test ./tests/*tests.ts",
        "reload-cache": "deno cache --reload \"*/**/*.ts\"",
        "create-pr": "deno run -ERN --allow-run https://raw.githubusercontent.com/KinsonDigital/Infrastructure/refs/tags/v16.0.0/dev-tools/feat-pr-creator-tool.ts",
        "gen-release-notes": "deno run -ERWN --allow-run https://raw.githubusercontent.com/KinsonDigital/Infrastructure/refs/tags/v16.0.0/dev-tools/release-notes-generator-tool.ts",
        "install-globally": {
            "description": "Used to install globally with a reference to this project.  Used for testing purposes.",
            "command": "deno install -g -A --config=./deno.json ./src/main.ts --name sprocket"
        },
        "uninstall-globally": {
            "description": "Used to uninstall globally.",
            "command": "deno uninstall -g sprocket"
        },
        "check-publish": "deno publish --dry-run",
        "sprocket": "deno run -A jsr:@kinsondigital/sprocket@2.1.0 run-job ./dev-tools/sprocket-config.ts"
    },
    "lint": {
        "include": [
            "src/",
            "tests/"
        ],
        "exclude": [
            "**/playground.ts"
        ]
    },
    "fmt": {
        "include": [
            "src/",
            "tests/"
        ],
        "exclude": [
            "**/*.md",
            "**/*.json",
            "**/*.js",
            "**/*.yml",
            "**/*.yaml",
            "**/playground.ts"
        ],
        "useTabs": true,
        "lineWidth": 130,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    },
    "exclude": [
        "./testing/",
        "./dev-tools/",
        "./tests/",
        "./.github/",
        "./.vscode/",
        "./release-notes/"
    ],
    "imports": {
        "@std/fs": "jsr:@std/fs@1.0.19",
        "@std/path": "jsr:@std/path@1.1.2",
        "@std/assert": "jsr:@std/assert@1.0.15",
        "@std/streams": "jsr:@std/streams@1.0.13",
        "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.8",
        "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.8",
        "neverthrow": "npm:neverthrow@^6.2.2",
        "@kdclients": "jsr:@kinsondigital/kd-clients@1.0.0-preview.15",
        "@zod": "npm:zod@4.1.12",
        "@sprocket": "jsr:@kinsondigital/sprocket@2.0.0"
    },
    "exports": {
        ".": "./src/main.ts",
        "./configuration": "./src/core/configuration.ts",
        "./models": "./src/models/mod.ts",
        "./git": "./src/core/git.ts",
        "./dotnet": "./src/core/dotnet.ts",
        "./github": "./src/core/github.ts",
        "./runners": "./src/core/runners.ts",
        "./json": "./src/core/json.ts",
        "./utils": "./src/core/util-mods.ts",
        "./console": "./src/core/logging.ts",
        "./install": "./installation/install.ts"
    }
}
