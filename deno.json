{
    "version": "v1.0.0-preview.8",
    "tasks": {
        "check": "deno check **/*.ts",
        "fmt": "deno fmt **/*.ts",
        "fmt-check": "deno fmt --check **/*.ts",
        "lint": "deno lint **/*.ts",
        "tests": "deno test ./Tests/*Tests.ts",
        "reload-cache": "deno cache --reload \"*/**/*.ts\""
    },
    "lint": {
        "include": [
            "src/",
            "tests/"
        ]
    },
    "fmt": {
        "include": [
            "src/",
            "tests/"
        ],
        "exclude": [
            "**/*.md",
            "**/*.json",
            "**/*.js",
            "**/*.yml",
            "**/*.yaml",
            "**/playground.ts"
        ],
        "useTabs": true,
        "lineWidth": 130,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    },
    "imports": {
        "@std/fs": "jsr:@std/fs@1.0.19",
        "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.8",
        "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.8",
        "neverthrow": "npm:neverthrow@^6.2.2",
        "@kdclients": "jsr:@kinsondigital/kd-clients@1.0.0-preview.15"
    }
}
