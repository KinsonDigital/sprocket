{
    "version": "v1.0.0-preview.8",
    "tasks": {
        "check": "deno check **/*.ts",
        "fmt": "deno fmt **/*.ts",
        "fmt-check": "deno fmt --check **/*.ts",
        "lint": "deno lint **/*.ts",
        "tests": "deno test ./Tests/*Tests.ts",
        "reload-cache": "deno cache --reload \"*/**/*.ts\""
    },
    "lint": {
        "include": [
            "src/",
            "tests/"
        ]
    },
    "fmt": {
        "include": [
            "src/",
            "tests/"
        ],
        "exclude": [
            "**/*.md",
            "**/*.json",
            "**/*.js",
            "**/*.yml",
            "**/*.yaml",
            "**/playground.ts"
        ],
        "useTabs": true,
        "lineWidth": 130,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    }
}
